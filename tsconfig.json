{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "allowJs": true
  },
  "include": [
    "src/",
    "spec/",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "dist"
  ]
}